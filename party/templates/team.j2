{% extends 'base.j2' %}

{% block title %}{{ teams[team_id].nickname }} season standings{% endblock %}

{% block content %}
  <p>Back to <a href="{{ url_for('show_standings') }}">overall standings</a></p>
  <p>This <em>does not</em> know about Sun 2 or Black Hole events. This is just about the end-of-game result.</p>
  {% for team, record in team_data[team_id].items() %}
  <div class="team-record">
    <table>
      <tr>
        <th colspan=2><a href="{{ url_for('show_team_stats', team_id=team) }}">{{ teams[team].nickname }}</a></th>
        <th>{{ record["overall"][0] }}-{{ record["overall"][1] - record["overall"][0] }}</th>
        <th>{{ "{0:.0f}".format(record["overall"][0] / record["overall"][1] * 100) }}</th>
      </tr>
      {% for pitcher, single_record in record["pitchers"].items()|sort() %}
      <tr>
        <td class="spacer"/>
        <td>{{ pitcher }}</td>
        <td class="number">{{ single_record[0] }}-{{ single_record[1] - single_record[0] }}</td>
        <td class="number">{{ "{0:.0f}".format(single_record[0] / single_record[1] * 100) }}</td>
      </tr>
      {% endfor %}
    </table>
  </div>
  {% endfor %}
{% endblock %}
